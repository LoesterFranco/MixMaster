#!/bin/bash
. vars
date=$(date)
function select_lang() {
	question=$(dialog \
		--stdout \
		--backtitle "MIXMASTER MANAGER INSTALL" \
		--ok-label Next \
		--menu "How many servers do you have?" \
		0 0 0 \
		1 "I have 1" \
		2 "I have 2")
	case $question in
	1)
		echo "$date Number of servers: 1" >>$CONFIGLOG
		options
		;;
	2)
		echo "$date Number of servers: 2" >>$CONFIGLOG
		findfiles2
		;;
	*)
		bash $CONFIGDIR/config
		;;
	esac
}
function options() {
	banco=$(rpm -qa | grep ^mysql | grep server | wc -l)
	if (($banco > 0)); then
		dialog --backtitle "MIXMASTER MANAGER" --yesno "Do you have the server files?" 0 0
		case $? in
		0)
			echo "$date Have files" >>$LOGINF
			findfiles
			;;
		*)
			echo "$date no Have files" >>$LOGINF
			copy-files
			;;
		esac
	else
		dialog --backtitle "MIXMASTER MANAGER" --ok-label Next --msgbox "MySQL Server not installed, install Mysql Server and come back to install MixMaster Manager" 0 0
	fi
}
function copy-files() {
	dir=$(dialog \
		--stdout \
		--backtitle "MIXMASTER MANAGER INSTALL" \
		--ok-label Next \
		--cancel-label Back \
		--title "Choose the installation destination:" \
		--fselect /mixmaster \
		10 70)
	case $? in
	1 | 255) options ;;
	esac
	echo "$date PATH FULL: $dir" >>$CONFIGLOG
	mkdir -p $dir
	PATHLGS="$dir/lgs"
	PATHGMS="$dir/gms"
	PATHZS="$dir/zs1"
	LGSFILE="$dir/lgs/1"
	GMSFILE="$dir/gms/2"
	ZSFILE="$dir/zs1/3"
	cp $CONFIGDIR/files/* $dir/ -R
	ipaddr=$(ip a | grep inet | cut -d' ' -f6 | sed -n -e 3p | cut -d'/' -f1)
	sed -i "s:IPADDRESS:$ipaddr:g" $PATHLGS/lgs.cfg
	sed -i "s:IPADDRESS:$ipaddr:g" $PATHGMS/gms.cfg
	sed -i "s:IPADDRESS:$ipaddr:g" $PATHZS/zs.cfg
	sed -i "s:IPADDRESS:$ipaddr:g" $PATHLGS/ftplist.cfg
	nomeserver=$(dialog \
		--stdout \
		--backtitle "MIXMASTER MANAGER INSTALL" \
		--ok-label Next \
		--inputbox "Server Name:" 0 0)
	case $? in
	1 | 255) copy-files ;;
	esac
	sed -i "s:NOMEDOSERVIDOR:$nomeserver:g" $PATHGMS/gms.cfg
	config_banco
}
function config_banco() {
	username=$(dialog \
		--stdout \
		--backtitle "MIXMASTER MANAGER INSTALL" \
		--ok-label Next \
		--title 'Data Base Configuration' \
		--inputbox "User:" 0 0)
	case $? in
	1 | 255) copy-files ;;
	esac

	password=$(dialog \
		--stdout \
		--backtitle "MIXMASTER MANAGER INSTALL" \
		--ok-label Next \
		--title 'Data Base Configuration' \
		--passwordbox "Password:" 0 0)
	case $? in
	1 | 255) config_banco ;;
	esac

	sed -i "s:USUARIO:$username:g" $dir/data/lgs.cfg
	sed -i "s:SENHA:$password:g" $dir/data/lgs.cfg
	sed -i "s:USUARIO:$username:g" $dir/data/gms.cfg
	sed -i "s:SENHA:$password:g" $dir/data/gms.cfg
	sed -i "s:USUARIO:$username:g" $dir/data/zs.cfg
	sed -i "s:SENHA:$password:g" $dir/data/zs.cfg
	configuration_server
}
function configuration_server() {
	cd $dir
	(
		echo 1
		echo 1
	) | $dir/cypher
	cypherdata=$(find $dir/data/ -type d -name cfg_*)
	encodelgs="$cypherdata/encode/lgs_db.enc"
	encodegms="$cypherdata/encode/gms_db.enc"
	encodezs="$cypherdata/encode/zs_db.enc"
	encodekey="$cypherdata/key"
	cp $encodelgs $encodekey $PATHLGS/
	cp $encodegms $encodekey $PATHGMS/
	cp $encodezs $encodekey $PATHZS/
	select_dir-copy
}
function findfiles() {
	find / -type d -name lgs* 2>/dev/null 1>$LOGDIR/find.log | dialog --backtitle "MIXMASTER MANAGER" --infobox "Finding files, please wait ..." 0 0
	finder=$(cat $LOGDIR/find.log | wc -l)
	finderdir=$(cat $LOGDIR/find.log)
	PATHLGS=$(cat $LOGDIR/find.log)
	if (($finder == 1)); then
		IFS='/' read -r -a ARRAYLGS <<<"$finderdir"
		IND1=${#ARRAYLGS[@]}
		let IND2=($IND1 - 2)
		IND=1
		lgs="/"
		while (($IND <= $IND2)); do
			dir="$lgs${ARRAYLGS[$IND]}/"
			lgs=$dir
			let IND=($IND + 1)
		done
		select-dir-file_lgs
	else
		dialog --backtitle "MIXMASTER MANAGER" --ok-label Next --msgbox "LGS not found, please show us the directory" 0 0
		select-dir
	fi
}
function findfiles2() {
	find / -type d -name lgs* 2>/dev/null 1>$LOGDIR/find.log | dialog --backtitle "MIXMASTER MANAGER" --infobox "Finding files, please wait ..." 0 0
	finder=$(cat $LOGDIR/find.log | wc -l)
	finderdir=$(cat $LOGDIR/find.log)
	PATHLGS=$(cat $LOGDIR/find.log)
	if (($finder == 1)); then
		IFS='/' read -r -a ARRAYLGS <<<"$finderdir"
		IND1=$(echo ${#ARRAYLGS[@]})
		let IND2=($IND1 - 2)
		IND=1
		lgs="/"
		while (($IND <= $IND2)); do
			dir="$lgs${ARRAYLGS[$IND]}/"
			lgs=$dir
			let IND=($IND + 1)
		done
		select-dir-file_lgs2
	else
		dialog --backtitle "MIXMASTER MANAGER" --ok-label Next --msgbox "LGS not found, please show us the directory" 0 0
		select-dir2
	fi
}
function select-dir() {
	dir=$(dialog \
		--stdout \
		--backtitle "MIXMASTER MANAGER INSTALL" \
		--ok-label Next \
		--cancel-label Back \
		--title "PATH of server files: " \
		--fselect / \
		10 70)
	case $? in
	1 | 255) select_lang ;;
	esac
	echo "$date PATH FULL: $dir" >>$CONFIGLOG
	select-dir-path_lgs
}
function select-dir2() {
	dir=$(dialog \
		--stdout \
		--backtitle "MIXMASTER MANAGER INSTALL" \
		--ok-label Next \
		--cancel-label Back \
		--title "PATH of server files: " \
		--fselect / \
		10 70)
	case $? in
	1 | 255) select_lang ;;
	esac
	echo "$date PATH FULL: $dir" >>$CONFIGLOG
	select-dir-path_lgs2
}
function select-dir-path_lgs() {
	findlgs_line=$(find $dir -maxdepth 1 -type d -name "lgs*" | wc -l)
	if (($findlgs_line == 1)); then
		PATHLGS=$(find $dir -maxdepth 1 -type d -name "lgs*")
		echo "$date LGS PATH: $PATHLGS" >>$CONFIGLOG
		select-dir-file_lgs
	elif (($findlgs_line > 1)); then
		dialog --backtitle "MIXMASTER MANAGER INSTALL" --ok-label Next --msgbox "More than one directory LGS found" 0 0
		case $? in
		1 | 255) select-dir ;;
		esac
		DIR1=$(find $dir -maxdepth 1 -type d -name "lgs*" | sed -n -e 1p)
		DIR2=$(find $dir -maxdepth 1 -type d -name "lgs*" | sed -n -e 2p)
		dirfind=$(dialog \
			--stdout \
			--backtitle "MIXMASTER MANAGER INSTALL" \
			--ok-label Next \
			--menu "Choose the directory to use" \
			0 0 0 \
			1 "$DIR1" \
			2 "$DIR2")
		case $dirfind in
		1) PATHLGS=$DIR1 ;;
		2) PATHLGS=$DIR2 ;;
		*) select-dir ;;
		esac
		echo "$date LGS PATH: $PATHLGS" >>$CONFIGLOG
		select-dir-file_lgs
	else
		dialog --backtitle "MIXMASTER MANAGER INSTALL" --ok-label Back --msgbox "Directory LGS not found! Choose the correct directory" 0 0
		echo "$date $PATHLGS not found" >>$CONFIGLOG
		case $? in
		*) select-dir ;;
		esac
	fi
}
function select-dir-file_lgs() {
	findlgs_file=$(find $PATHLGS -maxdepth 1 -type f -name "1*" | wc -l)
	if (($findlgs_file == 1)); then
		LGSFILE=$(find $PATHLGS -maxdepth 1 -type f -name "1*")
		echo "$date LGS PATH FILE: $LGSFILE" >>$CONFIGLOG
		select-dir-path_gms
	elif (($findlgs_line > 1)); then
		dialog --backtitle "MIXMASTER MANAGER INSTALL" --ok-label Next --msgbox "More than one file LGS found" 0 0
		case $? in
		1 | 255) select-dir ;;
		esac
		ARQ1=$(find $PATHLGS -maxdepth 1 -type f -name "1*" | sed -n -e 1p)
		ARQ2=$(find $PATHLGS -maxdepth 1 -type f -name "1*" | sed -n -e 2p)
		filefind=$(dialog \
			--stdout \
			--backtitle "MIXMASTER MANAGER INSTALL" \
			--ok-label Next \
			--menu "Choose the file to use" \
			0 0 0 \
			1 "$ARQ1" \
			2 "$ARQ2")
		case $filefind in
		1) LGSFILE=$ARQ1 ;;
		2) LGSFILE=$ARQ2 ;;
		*) select-dir ;;
		esac
		echo "$date LGS PATH FILE: $LGSFILE" >>$CONFIGLOG
		select-dir-path_gms
	else
		dialog --backtitle "MIXMASTER MANAGER INSTALL" --ok-label Back --msgbox "LGS not found! Choose the correct directory" 0 0
		echo "$date $LGSFILE not found" >>$CONFIGLOG
		case $? in
		*) select-dir ;;
		esac
	fi

}
