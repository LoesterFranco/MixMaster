			0 0 0 \
			1 "$DIR1" \
			2 "$DIR2")
		case $dirfind in
		1) PATHGMS=$DIR1 ;;
		2) PATHGMS=$DIR2 ;;
		*) select-dir ;;
		esac
		echo "$date GMS PATH: $PATHGMS" >>$CONFIGLOG
		select-dir-file_gms
	else
		dialog --backtitle "MIXMASTER MANAGER INSTALL" --ok-label Back --msgbox "Directory GMS not found! Choose the correct directory" 0 0
		echo "$date $PATHGMS not found" >>$CONFIGLOG
		case $? in
		*) select-dir ;;
		esac
	fi
}
